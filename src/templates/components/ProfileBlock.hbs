<div class="user_profile__block" id="profileBlock">
  <img
    src="{{avatar}}"
    alt=""
    class="user_profile_block_avatar"
    onerror="this.src='/imgs/default_transaction.svg'"
  />
  <div class="user_profile_block_info">
    <span> {{{user_name}}} </span>
    <span class="user_profile_block__id"> ID: {{{user_id}}} </span>
  </div>
</div>
