<div class="modal-overlay" id="popup" style="display: none">
  <div class="modal">
    <div class="modal-header">
      <h1 class="modal-title">Редактирование профиля</h1>
      <button class="close-button" onclick="closePopup()">
        <div class="close-icon"></div>
      </button>
    </div>

    <div class="profile-info">
      <img
        src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/attachments/gen-images/public/cat-with-sunglasses-wwDjQ56tMJcECEI1EUrKB72ohx2K0D.jpg"
        alt="Profile Avatar"
        class="avatar"
        id="editAvatarPic"
      />
      <div class="avatar-edit">
        <span class="avatar_edit_operation_text">Редактировать</span>
        <button class="avatar-edit_button" id="editAvatarBtn" type="button">
          <img src="imgs/edit_avatar.png" />
        </button>
        <input
          type="file"
          id="avatarInput"
          accept="image/*"
          style="display: none"
        />
        <span style="color: #b50000" class="avatar_edit_operation_text"
          >Удалить</span
        >
        <button class="avatar-edit_button" id="deleteAvatarBtn" type="button">
          <img src="imgs/delete_avatar.png" />
        </button>
      </div>
      <div class="user-details">
        <div class="user-name">{{fullName}}</div>
        <div class="user-id">ID : {{ID}}</div>
      </div>
    </div>

    <form id="edit-profile-form" novalidate>
      <div class="form-group">
        <label class="form-label">Имя</label>
        {{{firstNameInput}}}
      </div>

      <div class="form-group">
        <label class="form-label">Фамилия</label>
        {{{lastNameInput}}}
      </div>

      <div class="form-group">
        <label class="form-label">E-mail</label>
        {{{emailInput}}}
      </div>

      <button type="submit" class="submit-button" id="edit-profile-button">
        Сохранить изменения
      </button>
    </form>
  </div>
</div>
