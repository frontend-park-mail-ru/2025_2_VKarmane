<div class="operations">
  {{#if operations_exists}}
  <div class="Transaction-header" style="margin-left: 3vh">
    <p class="Transact-Category-text">Операции</p>
    <button onclick="openPopups()" class="open-btn">+</button>
  </div>
  <div class="operations-list">
    {{#each operationsItems}}
    <div class="operations-item">
      <div class="operation" style="display: flex">
        <img
          src="{{CategoryLogo}}"
          alt=""
          onerror="this.src='/imgs/default_transaction.svg'"
        />
        <div class="title_with_category">
          <div class="title_oper">{{OrganizationTitle}}</div>
          <div class="category_oper">{{CategoryName}}</div>
        </div>
        <div class="price_and_time">
          <div class="price_oper">{{OperationPrice}}₽</div>
          <div class="time_oper">{{OperationTime}}</div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div class="oper_not_exists">
    <div class="oper_not_exists_img"></div>
    <h2 class="oper_not_exists_text">Тут пока ничего нет 2:(</h2>
    <button class="add_operation" onclick="openPopups()">
      + Добавить операцию
    </button>
  </div>
  {{/if}}
</div>
